{
  "kind": "collectionType",
  "collectionName": "news_pages",
  "info": {
    "singularName": "news-page",
    "pluralName": "news-pages",
    "displayName": "news-page"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Company",
        "Project",
        "Product"
      ]
    },
    "date": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "content": {
      "type": "richtext",
      "required": true
    }
  }
}
